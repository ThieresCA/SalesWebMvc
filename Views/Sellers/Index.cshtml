@model IEnumerable<SalesWebMvc.Models.Seller>;

@{
    ViewData["Title"] = "Index";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary"> Create</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(c => c.Active))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    <span>Ativo</span>
                </td>
                <td>
                    @*serve para chamar a ação Edit, com a asp-route-id passando o Id do item selecionado*@
                    <a asp-action="Edit" asp-route-id="@item.Id" class="pull-right" style="margin-left:10px"> Edit</a>
                    @*serve para chamar a ação Details, com a asp-route-id passando o Id do item selecionado*@
                    <a asp-action="Details" asp-route-id="@item.Id" class="pull-right" style="margin-left:10px"> Details </a>
                    @*serve para chamar a ação de Delete, com a asp-route-id passando o Id do item selecionado*@
                    <a asp-action="Delete" asp-route-id="@item.Id" class="pull-right" style="margin-left:10px"> Inativar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <p>
        <a class="btn btn-primary" asp-action="Inactives">Lista de inativos</a>
    </p>
</div>