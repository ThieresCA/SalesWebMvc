@model IEnumerable<SalesWebMvc.Models.Seller>;

@{
    ViewData["Title"] = "Index";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary glyphicon glyphicon-floppy-saved"> Create</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    @if (item.Active == 1)
                    {
                        <span>Ativo</span>
                    }
                    else
                    {
                        <span>Inativo</span>
                    }
                </td>
                <td>
                    @*serve para chamar a ação Edit, com a asp-route-id passando o Id do item selecionado*@
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary glyphicon glyphicon-edit pull-right" style="margin-left:5px"> Edit</a>
                    @*serve para chamar a ação Details, com a asp-route-id passando o Id do item selecionado*@
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success glyphicon glyphicon-book pull-right" style="margin-left:5px"> Details</a>
                    @*serve para chamar a ação de Delete, com a asp-route-id passando o Id do item selecionado*@
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger glyphicon glyphicon-remove pull-right" style="margin-left:5px"> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>